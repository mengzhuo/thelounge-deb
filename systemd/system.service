[Unit]
Description=The Lounge (IRC client)
After=network-online.target
Wants=network-online.target


[Service]
User=thelounge
Group=thelounge
Type=simple
ExecStart=/usr/bin/thelounge start
ProtectSystem=yes
ProtectHome=yes
NoNewPrivileges=yes
PrivateTmp=yes
RuntimeDirectory=thelounge

[Install]
WantedBy=multi-user.target
